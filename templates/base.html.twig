<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <!-- HEADER -->
        <header>
            <nav class="navbar navbar-expand-lg" uk-sticky>
                <div class="container-fluid">
                    <a class="navbar-brand text-light" href="{{ path('home') }}">Garage</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarColor01">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.attributes.get('_route') == 'app_home' %}active text-secondary{% else %}text-light{% endif %}" 
                                href="{{ path('app_home') }}">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.attributes.get('_route') == 'app_catalogue' %}active text-secondary{% else %}text-light{% endif %}" 
                                href="{{ path('app_catalogue') }}">Catalogue</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.attributes.get('_route') == 'app_inscription' %}active text-secondary{% else %}text-light{% endif %}" 
                                href="{{ path('app_inscription') }}">Inscription</a>
                            </li>
                        </ul>

                        <form class="d-flex">
                            <input class="form-control me-sm-2" type="search" placeholder="Rechercher">
                            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Rechercher</button>
                        </form>
                    </div>
                </div>
            </nav>
        </header>
        
        <!-- MAIN CONTENT -->
        <div class="container my-5">
            {% block body %}
            <!-- Contenu de la page spécifique ici -->
            {% endblock %}
        </div>

        <!-- FOOTER -->
        <footer class="text-center">
            <div class="container">
                {% block body %}{% endblock %}
            </div>
    </body>
</html>
